<widget name="Dynamic Data Viewer" id="http://openajax.org/samples/widgets/dyndatavis"
		spec="1.0" version='0.8' width="400" height="315" jsClass='dyndatavis'
		xmlns="http://openajax.org/metadata">

	<description>
		Sample data visualization widget that receives a continuous simulated feed
		of stock quotes for fake companies then displays updated information as it is received.
		There is a corresponding dyndatagen widget which generates the data and publishes
		messages to the OpenAjax Hub. 
	</description>
    <requires>
      <require type='javascript' src='dyndatavis.js'/>
    </requires>
	<topics>
		<topic name='org.openajax.2008InteropFest.dyndata.newstockprice' subscribe='true'/>
	</topics>
    <properties>
		<property name='highlow' sharedAs='org.openajax.2008InteropFest.dyndata.highlow' 
					datatype='String' defaultValue=''>
			<!-- subscribe='true' -->
			<description>
				Holds the high and low stock prices for the list of companies whose stocks 
				are being watched. The property value is a JavaScript object
				with properties 'tName' (the stock ticker name), 'high' (new high value),
				and 'low' (new low value).
			</description>
		</property>
	</properties>

    <content>
    <![CDATA[
		<style type="text/css">
			.DynDataTitle {
				text-align:center;
				font-weight:bold;
				font-size: 1.1em;
				font-family:sans-serif;
			}
		</style>
		<div>
			<p class="DynDataTitle">Dynamic data visualization widget</p>
			<div id="DataVis_1">
			</div>
		</div>
  
    ]]>
    </content>
</widget>
