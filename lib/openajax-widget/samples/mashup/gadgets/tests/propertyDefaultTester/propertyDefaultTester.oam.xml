<widget name="PropertyDefaultTester" id="http://openajax.org/samples/widgets/PropertyTester"
		jsClass="PropertyDefaultTester" spec="1.0" version='0.8' width="300" height="24"
		xmlns="http://openajax.org/metadata">
	
    <description>Test handling of property defaults for different property data types</description>
    
    <properties>
    	<property name="bool1" datatype="Boolean" defaultValue="true"/>
    	<property name="bool2" datatype="Boolean" defaultValue="false"/>
    	<property name="bool3" datatype="Boolean" defaultValue="22"/>
    	<property name="bool4" datatype="Boolean" defaultValue=""/>
    	
    	<property name="num1" datatype="Number" defaultValue="22"/>
    	<property name="num2" datatype="Number" defaultValue="-11"/>
    	<property name="num3" datatype="Number" defaultValue="abc"/>
    	<property name="num4" datatype="Number" defaultValue=""/>
    	
    	<property name="str1" datatype="String" defaultValue="This is a string"/>
    	<property name="str2" datatype="String" defaultValue='{ "foo": "bar", "baz": "boo" }'/>
    	<property name="str3" defaultValue='{ "foo": "bar", "baz": "boo" }'/>
    	<property name="str4" datatype="String" defaultValue=""/>
    	
    	<property name="obj1" datatype="Object" defaultValue='{ "foo": "bar", "baz": "boo" }'/>
    	<property name="obj2" datatype="Object" defaultValue=""/>
    	
    	<property name="array1" datatype="Array" defaultValue='[ "one", "two", "three" ]'/>
    	<property name="array2" datatype="[*]" defaultValue='[ "four", "five", "six" ]'/>
    	<property name="array3" datatype="Array" defaultValue=""/>
    	
    	<property name="date1" datatype="Date" defaultValue="2008/01/01"/>
    	<property name="date2" datatype="Date" defaultValue="Wed Sep 17 2008 16:14:45 GMT-0500 (CDT)"/>
    	<property name="date3" datatype="Date" defaultValue="This is a bad date"/>
    	<property name="date4" datatype="Date" defaultValue=""/>
    	
		<property name="regexp1" datatype="RegExp" defaultValue="\\w+"/>
		<property name="regexp2" datatype="RegExp" defaultValue="This is a bad regexp"/>
		<property name="regexp3" datatype="RegExp" defaultValue=""/>

		<property name="any1" datatype="*" defaultValue='"Hello world"'/>
		<property name="any2" datatype="*" defaultValue='{ "foo": "bar", "baz": "boo" }'/>
		<property name="any3" datatype="*" defaultValue="This is a string, not JSON text"/>
		<property name="any4" datatype="*" defaultValue=""/>
		
		<property name="multiple1" datatype="Number|String" defaultValue="7"/>
		<property name="multiple2" datatype="Number|String" defaultValue='"7"'/>
		<property name="multiple3" datatype="Number|String" defaultValue="This is a string, not JSON text"/>
		<property name="multiple4" datatype="Number|String" defaultValue=""/>
    </properties>

	<requires>
		<require type="javascript" src="propertyDefaultTester.js"/>
	</requires>

    <content>
    <![CDATA[
    	<div id="__WID___msg"></div>
    ]]>
    </content>
    
    <javascript location="atEnd">
        var msg = "Tests succeeded";
        try {
          	OpenAjax.widget.byId("__WID__").runTests();
        } catch( e ) {
			msg = "Tests FAILED : " + e.message;
        }
        
        document.getElementById( "__WID___msg" ).innerHTML = msg;
    </javascript>
</widget>
