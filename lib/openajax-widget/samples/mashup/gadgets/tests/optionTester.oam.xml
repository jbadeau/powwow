<widget name="OptionTester" id="http://openajax.org/samples/widgets/OptionTester"
		xmlns:html="http://www.w3.org/1999/xhtml" spec="1.0" version='0.9' width="300" height="24"
		xmlns="http://openajax.org/metadata" jsClass="OptionTester">
    <description>This is a test widget that tests the UI representation of various parts of the OAA spec</description>
    
    <require type="javascript">
        OptionTester = function() {};
        OptionTester.prototype.onLoad = function(){
          document.getElementById("__WID__data_SOP").value = this.OpenAjax.getPropertyValue( "singleOptionProperty" );
        };
  
        OptionTester.prototype.handleClick = function(){
//          alert("click!");
        };

        OptionTester.prototype.handleChange = function(event){
          // publish any changes to the input value by changing the property
          // value above that has publish="true"
          var propControl = event.target;
          var property = event.getAttribute('propertyName');
          this.OpenAjax.setPropertyValue( property, propertyControl.value );
        };
  
        OptionTester.prototype.onChangeSingleOptionProperty = function( event ){
          document.getElementById("__WID__data_SOP").value = event.newValue;
        };
    </require>
    
