<widget name="Unit Test 1" id="http://openajax.org/samples/widgets/UnitTest1"
		spec="1.0" width="250" height="125" jsClass="unittest1"
		xmlns="http://openajax.org/metadata">
    <description>unit test</description>

    <requires>
        <require type="javascript">
            var test2 = [];
        </require>
    	<require type="javascript" src="unittest1.js"/>
    </requires>
    
    <!-- test 1: <javascript src=...> -->
    <javascript location="beforeContent" src="before1.js"/>
    <javascript location="afterContent" src="after1.js"/>
    <javascript location="atEnd" src="atend1.js"/>
    
    <content>
    <![CDATA[
        <div style="width:100%; height:100%; overflow:auto;">
            <div id="unittest1_content_start" style="display:none;"></div>
            <div id="unittest1_content"></div>
            <div id="unittest1_content_end" style="display:none;"></div>
        </div>
        
        <script>
            test2.push( "content" );
        </script>
    ]]>
    </content>

    <javascript location="atEnd">
        test2.push( "atEnd(inline)" );
        
    	OpenAjax.widget.byId("__WID__").runTests();
    </javascript>

</widget>
