<widget name="RichText" id="http://openajax.org/samples/widgets/RichText"
		spec="1.0" jsClass='RichText'
		xmlns="http://openajax.org/metadata">

    <requires>
		<library name="dojo" version="1.2" src="http://ajax.googleapis.com/ajax/libs/dojo/1.2/">
			<preload>
				djConfig = { isDebug: false, parseOnLoad: false, afterOnLoad: true };
			</preload>
	    	<require type="javascript" src="dojo/dojo.xd.js"/>
	    	<require type="css" src="dojo/resources/dojo.css"/>
	    	<require type="css" src="dijit/themes/dijit.css"/>
	    	<require type="css" src="dijit/themes/dijit_rtl.css"/>
	    	<require type="css" src="dijit/themes/tundra/tundra.css"/>
		</library>
        <require type="javascript" src="richtext.js"/>
    </requires>

    <properties>
      	<property name="textcontent" datatype="String" defaultValue="It was a dark and stormy night.  Your story belongs here!" sharedAs="textcontent"/>
            <!-- publish="true" -->
    </properties>

    <content>
      <![CDATA[
          <div id="__WID__rtf_view" class="tundra" style="width:100%;height:100%;background-color:#f5f5f5">
          </div> 
      ]]>      
    </content>
    <content mode="edit">
      <![CDATA[
          <div id="__WID__rtf_edit" class="tundra" style="width:100%;height:100%;background-color:#f5f5f5">
              <div id="__WID__rtf_ta" name="rtf_ta" style="width:100%;height:100%;" dojoType="dijit.Editor">
              </div>
              <hr />
              <div>
                   <input type="button" value="Save" />
                   <input type="button" value="Cancel" />
              </div>
          </div> 
      ]]>
    </content>
</widget>
